{
  "manifest_version": 2,

  "name": "Project Rome",
  "description": "This extension uses Microsoft Project Rome to connect to devices, and generate UserActivities",
  "version": "1.0",

  "background": {
    "page": "background.html",
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "identity",
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/",
    "https://graph.microsoft.com/",
    "https://ppe.activity.windows.com/",
    "https://login.live.com/",
    "http://cardedurls.azurewebsites.net/"
  ]
}